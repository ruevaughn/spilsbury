<h1>Listing guestbooks</h1>

<table>
  <thead>
    <tr>
      <th>Obituary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guestbooks.each do |guestbook| %>
      <tr>
        <td><%= guestbook.obituary_id %></td>
        <td><%= link_to 'Show', admin_guestbook(guestbook) %></td>
        <td><%= link_to 'Edit', admin_edit_guestbook_path(guestbook) %></td>
        <td><%= link_to 'Destroy', guestbook, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Guestbook', new_admin_guestbook_path %>
